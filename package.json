{
  "name": "ethereal",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "以太之灵 - 智能桌面精灵助手",
  "author": {
    "name": "Mystvio"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "generate:assets": "tsx scripts/generate-assets.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:rs": "cd src-tauri && cargo test",
    "coverage": "vitest run --coverage",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "lint:md": "markdownlint **/*.md",
    "lint:md:fix": "markdownlint -f **/*.md",
    "lint:rs": "cd src-tauri && cargo fmt --all --check && cargo clippy --all-targets --all-features --workspace -- -D warnings",
    "lint:rs:fix": "cd src-tauri && cargo fmt --all && cargo clippy --fix --allow-dirty --allow-staged --all-targets --all-features --workspace -- -D warnings",
    "fmt": "biome format --write ./src",
    "fmt:rs": "cd src-tauri && cargo fmt --all",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "cz": "cz"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-opener": "~2.5.3",
    "@tauri-apps/plugin-shell": "^2.3.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write",
      "vitest related --run",
      "tsc --noEmit"
    ],
    "*.md": [
      "markdownlint -f"
    ],
    "src-tauri/**/*.rs": [
      "pnpm fmt:rs"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
