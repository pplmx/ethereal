# 使用严格的 peer 依赖检查
strict-peer-dependencies=false
auto-install-peers=true

# 启用 shamefully-hoist (兼容某些工具)
shamefully-hoist=false

# 仅允许 pnpm
engine-strict=true

# 使用更快的镜像源 (可选,中国用户)
# registry=https://registry.npmmirror.com

# 保存精确版本
save-exact=false

# 锁定文件设置
lockfile=true

# 并行安装数量
network-concurrency=16
